{
    "extends": "recommended",
    "rules": {
        "BlockEndsWithBlankLine": "off",
        "ClassJavadoc": "off",
        "ClassSize": "off",
        "CompileStatic": "off",
        "DuplicateNumberLiteral": "off",
        "DuplicateStringLiteral": "off",
        "ImplicitClosureParameter": "off",
        "Instanceof": "off",
        "JUnitPublicField": "off",
        "JUnitPublicNonTestMethod": "off",
        "JUnitPublicProperty": "off",
        "JavaIoPackageAccess": "off",
        "LineLength": "off",
        "MethodCount": "off",
        "MethodName": {
            "enabled": false
        },
        "MethodReturnTypeRequired": {
            "enabled": false
        },
        "MethodSize": "off",
        "NestedBlockDepth": "off",
        "NoDef": "off",
        "NoDouble": "off",
        "NoTabCharacter": "off",
        "PublicMethodsBeforeNonPublicMethods": "off",
        "StaticMethodsBeforeInstanceMethods": "off",
        "ThrowRuntimeException": "off",
        "UnnecessaryGString": "off",
        "UnnecessaryObjectReferences": "off",
        "VariableTypeRequired": "off"
    },
    "excludes": [
        "**/test/**",
        "**/build/**",
        "**/bin/**",
        "**/.gradle/**",
        "**/config/**"
    ]
}