<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with colored output - INFO level only to avoid cluttering progress bar -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%highlight(%-5level)] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- GUI appender for live log display in JavaFX TextArea -->
    <!-- INFO level filter prevents DEBUG spam from flooding the UI (see GitHub issue #12) -->
    <appender name="GUI" class="GuiLogAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Root logger configuration - DEBUG level for file, INFO for console -->
    <!-- Note: FILE appender added dynamically during extraction -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="GUI"/>
    </root>

    <!-- Set DEBUG level for our application -->
    <logger name="Main" level="DEBUG"/>
</configuration>
